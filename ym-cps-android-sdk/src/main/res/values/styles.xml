<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="YandexMoney.Theme" parent="android:Theme.Holo.Light">
        <!--<item name="android:background">@color/ym_background</item>-->
    </style>

    <style name="YandexMoney.Button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="YandexMoney.Button.Primary" parent="YandexMoney.Button">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/button_primary_color</item>
    </style>

    <style name="YandexMoney.Button.Primary.Large" parent="YandexMoney.Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="YandexMoney.Button.Secondary" parent="YandexMoney.Button">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textColor">@color/ym_text_color_dark</item>
    </style>

    <style name="YandexMoney.TextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ym_text_color_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="YandexMoney.TextView.Small" parent="YandexMoney.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="YandexMoney.TextView.Large" parent="YandexMoney.TextView">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="YandexMoney.TextView.Title" parent="YandexMoney.TextView">
        <item name="android:textColor">@color/ym_text_color_title</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="YandexMoney.Card" parent="android:Widget">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">@dimen/ym_screen_border_margin</item>
    </style>

</resources>