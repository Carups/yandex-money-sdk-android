<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ym_background"
    android:gravity="center">

    <TextView
        style="@style/YandexMoney.TextView.Title"
        android:text="@string/success_thank_you"/>

    <TextView
        style="@style/YandexMoney.TextView.Large"
        android:layout_marginTop="5dp"
        android:id="@+id/comment"
        android:text="@string/success_comment"/>

    <RelativeLayout
        style="@style/YandexMoney.Card"
        android:id="@+id/card"
        android:background="@drawable/card_active">

        <TextView
            style="@style/YandexMoney.TextView.Large"
            android:id="@+id/payment_card_type"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:textColor="@color/ym_text_color_pan_fragment"
            android:textStyle="bold|italic"/>

        <TextView
            style="@style/YandexMoney.TextView.Large"
            android:id="@+id/pan_fragment"
            android:layout_centerInParent="true"
            android:paddingTop="50dp"
            android:textColor="@color/ym_text_color_pan_fragment"/>

    </RelativeLayout>

    <Button
        style="@style/YandexMoney.Button.Primary.Large"
        android:id="@+id/save_card"
        android:layout_width="300dp"
        android:text="@string/success_save_card"/>

    <ImageView
        android:id="@+id/success_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/success_marker"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/YandexMoney.TextView.Small"
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:text="@string/success_save_card_description"/>

</LinearLayout>