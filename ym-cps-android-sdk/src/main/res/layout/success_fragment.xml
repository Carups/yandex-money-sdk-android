<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            style="@style/YandexMoney.TextView.Title"
            android:gravity="center"
            android:text="@string/success_thank_you"/>

        <TextView
            style="@style/YandexMoney.TextView.Large"
            android:layout_marginTop="5dp"
            android:id="@+id/comment"
            android:gravity="center"
            android:text="@string/success_comment"/>

        <RelativeLayout
            style="@style/YandexMoney.Card"
            android:id="@+id/card"
            android:background="@drawable/card_active">

            <ImageView
                style="@style/YandexMoney.TextView.Large"
                android:id="@+id/payment_card_type"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/ym_screen_border_margin"
                android:layout_marginRight="@dimen/ym_screen_border_margin"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/YandexMoney.TextView.Large"
                android:id="@+id/pan_fragment"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingTop="50dp"
                android:textColor="@color/ym_text_color_pan_fragment"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ym_screen_border_margin"
            android:src="@drawable/success_big"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <Button
            style="@style/YandexMoney.Button.Primary.Large"
            android:id="@+id/save_card"
            android:layout_width="300dp"
            android:text="@string/success_save_card"/>

        <ImageView
            android:id="@+id/success_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/success_marker"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/YandexMoney.TextView.Small"
            android:id="@+id/description"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/success_save_card_description"/>

    </LinearLayout>

</ScrollView>