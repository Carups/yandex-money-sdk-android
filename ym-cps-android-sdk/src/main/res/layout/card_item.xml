<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ym_card_item_height"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">

    <TextView
        style="@style/YandexMoney.TextView.Card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/pan_fragment"
        android:drawableLeft="@drawable/default_card"
        android:drawablePadding="@dimen/ym_card_item_drawable_padding"
        android:gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_overflow"
        tools:ignore="ContentDescription"/>

</LinearLayout>